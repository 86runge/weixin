  </view>
  <view class='order-box'>
    <view class="{{tabArr.boxIndex=='0'? 'show-item' : ''}}">tab-bd01</view>  
    <view class="{{tabArr.boxIndex=='1'? 'show-item' : ''}}">tab-bd02</view>  
    <view class="{{tabArr.boxIndex=='2'? 'show-item' : ''}}">tab-bd03</view>  
    <view class="{{tabArr.boxIndex=='3'? 'show-item' : ''}}">tab-bd04</view>
    <view class="{{tabArr.boxIndex=='4'? 'show-item' : ''}}">tab-bd04</view>   
