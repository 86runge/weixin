  <view class='tab-bar' bindtap="tabFun">
    <view class="{{tabArr.topIndex=='0'? 'active' : ''}}" data-index="0">全部订单</view>
    <view class="{{tabArr.topIndex=='1'? 'active' : ''}}" data-index="1">待付款</view>
    <view class="{{tabArr.topIndex=='2'? 'active' : ''}}" data-index="2">待发货</view>
