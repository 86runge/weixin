/* pages/myorder/myorder.wxss */

.tab-bar {
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  border-bottom: 2rpx solid #eee;
  display: flex;
  justify-content: space-around;
}

.tab-bar view{
  width: 20%;
  height: 100rpx;
  text-align: center;
}

.tab-bar .active {
  border-bottom: 4rpx solid #f00;
}

.order-box view {
  display: none;
}

.order-box .show-item {
  display: block;
}
