/* pages/address/address.wxss */

form {
  width: 100%;
}

.form-box > view {
  position: relative;
  width: 100%;
  height: 100rpx;
  padding: 0 40rpx;
  border-bottom: 2rpx solid #eee;
}

.form-box text {
  display: inline-block;
  width: 100rpx;
  line-height: 100rpx;
}

.form-box input {
  position: absolute;
  top: 22rpx;
  margin-left: 40rpx;
  display: inline-block;
}

.form-box picker {
  display: inline-block;
  margin-left: 40rpx;
}

.btn-box {
  padding: 0 40rpx;
}

.btn-box button {
  margin-top: 40rpx;
}
