/* pages/center/center.wxss */

.user-account {
  height: 150rpx;
  padding: 20rpx;
  background: #fff;
}

.user-img image {
  float: left;
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
}

.user-name {
  float: left;
  margin-left: 40rpx;
  text-align: center;
}

.user-name text {
  display: block;
}

.user-name text:first-child {
  font-size: 40rpx;
}

.user-name text:last-child {
  margin-top: 30rpx;
  color: #ff0036;
}

.supperuser {
  float: right;
  width: 200rpx;
  height: 60rpx;
  margin-top: 50rpx;
  text-align: center;
  line-height: 60rpx;
  border-radius: 8rpx;
  background: #eee;
}

.center-item {
  height: 100rpx;
  line-height: 100rpx;
  background: #fff;
  display: flex;
  justify-content: space-around;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
}

.my-collection, .my-comment {
  height: 100rpx;
  line-height: 100rpx;
  margin-top: 20rpx;
  background: #fff;
  border-top: 1px solid #ccc;
  border-bottom: 1px solid #ccc;
  padding-left: 20rpx;
}



.info-box {
  width: 100%;
  margin-top: 200rpx;
}

.info-img {
  width: 200rpx;
  margin: 0 auto;
}

.info-img image {
  display: block;
  width: 200rpx;
  height: 200rpx;
}

.info-operate {
  width: 400rpx;
  margin: 50rpx auto;
  text-align: center;
}

.info-operate button {
  margin: 20rpx;
}
